#include <std/assert>

a: int = 10
b: int = 20
c: int = 30

(a, b, c) = (b, c, a)
assert_eq!(a, 20)
assert_eq!(b, 30)
assert_eq!(c, 10)

(a, b, c) = (b, c, a + 1)
assert_eq!(a, 30)
assert_eq!(b, 10)
assert_eq!(c, 21)

(final d: int, e: int, mutable f: int) = (a, b, c)

assert_eq!(d, 30)
assert_eq!(e, 10)
assert_eq!(f, 21)

f = 40
assert_eq!(f, 40)

assert_err!(d = 50)

(x, y) := "ab"
assert_eq!(x, "a")
assert_eq!(y, "b")

assert_err!(
    (p: int, q) := "ab"
)

(m, n, o) := "xyz"
assert_eq!(m, "x")
assert_eq!(n, "y")
assert_eq!(o, "z")

assert_err!(
    (p, q, r) := "xy"
)

(h) := "abc"
assert_eq!(h, "abc")

l: list[int] = [1, 2, 3]
(x: int, y, z) := l
assert_eq!(x, 1)
assert_eq!(y, 2)
assert_eq!(z, 3)

assert_err!(
    (a: int, b: int) := "aa"
)

// added because it was a bug before
(t: &int, u: &int) := (&a, &b)
assert_eq!(t, &30)
assert_eq!(u, &10)
